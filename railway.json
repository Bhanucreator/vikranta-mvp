{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "start": {
        "cmd": "gunicorn --chdir backend app:app"
      }
    }
  },
  "deploy": {
    "startCommand": "gunicorn --chdir backend app:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
